{
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm --if-present -r build",
    "canary:enter": "changeset pre enter canary",
    "canary:exit": "changeset pre exit",
    "changelog": "changeset add",
    "clean": "pnpm --if-present -r clean",
    "clean:all": "pnpm clean && pnpm clean:deps",
    "clean:deps": "rimraf -g \"node_modules\" \"**/node_modules\"",
    "format": "pnpm format:script && pnpm format:prettier",
    "format:prettier": "prettier --write .",
    "format:script": "oxlint --fix --type-aware --tsconfig=./tsconfig.base.json",
    "lint": "pnpm lint:prettier && pnpm lint:script",
    "lint:prettier": "prettier --check .",
    "lint:script": "oxlint --type-aware --tsconfig=./tsconfig.base.json",
    "prepare": "lefthook install",
    "release": "changeset publish",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:e2e": "zx scripts/e2e.js",
    "test:unit": "vitest run",
    "typecheck": "pnpm --if-present -r typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@tsconfig/node20": "20.1.6",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.18.1",
    "@vitest/ui": "3.2.4",
    "happy-dom": "19.0.2",
    "lefthook": "1.13.6",
    "oxlint": "1.22.0",
    "oxlint-tsgolint": "0.2.0",
    "playwright": "catalog:",
    "prettier": "3.6.2",
    "prettier-plugin-packagejson": "2.5.19",
    "rimraf": "catalog:",
    "tsdown": "0.15.2",
    "typescript": "5.9.2",
    "vitest": "3.2.4",
    "zx": "8.8.1"
  },
  "packageManager": "pnpm@10.18.2"
}
